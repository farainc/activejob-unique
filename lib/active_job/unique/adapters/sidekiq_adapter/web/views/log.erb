<style type="text/css">
  a.no-decoration:focus, a.no-decoration:hover {
    text-decoration: none;
  }
  header.row .pagination {
    margin: 25px 0 0 0 !important;
  }
  form .btn {
    margin-right: 0;
  }
  .label-none {
    background: #eee;
    color: #999;
  }
</style>
<%
  def stats_label(value, style)
    if "#{value}" == "0"
      return "<span class='label label-none'>#{value}</span>"
    else
      return "<span class='label label-#{style}'>#{value}</span>"
    end
  end

  def progress_label(progress)
    case progress
    when 'enqueue_processed', 'perform_processed'
      'text-success'
    when 'enqueue_skipped', 'perform_skipped'
      'text-warning'
    when 'enqueue_failed', 'perform_failed'
      'text-danger'
    end
  end
%>
<div class='row header'>
  <div class='col-sm-10 col-xs-8'>
    <h3>
      <a class="no-decoration" href="<%= root_path %>job_stats">Job Stats</a>
      /
      <a class="no-decoration" href="<%= "#{root_path}job_stats/logs/#{@day}/#{@job_name}/#{@queue_name}/#{@uniqueness_id}" %>">Logs</a>
      /
      <span>Detail</span>
    </h3>
  </div>
  <div class='col-sm-2 col-xs-4 text-right'>
    <form method="POST" style="margin-top: 25px;" action="<%= "#{root_path}job_stats/logs/#{@day}/#{@job_name}/#{@queue_name}/#{@uniqueness_id}/#{@job_id}/delete"%>">
      <%= csrf_tag %>
      <input class='btn btn-danger' type="submit" name="delete" value="Delete All" data-confirm="Are you sure you want to delete the job log: [<%= @job_id %>]?"/>
    </form>
  </div>
</div>

<div class="table_container">
  <table class="table table-hover table-bordered table-striped table-white">
    <tr>
      <th class="col-xs-3">Day</th>
      <td><%= @day %></td>
    </tr>
    <tr>
      <th>Job</th>
      <td><code><%= @job_name %></code></td>
    </tr>
    <tr>
      <th>Queue</th>
      <td><%= @queue_name %></td>
    </tr>
    <tr>
      <th>Arguments</th>
      <td><code class="title" style="margin:0;"><%= JSON.pretty_generate(@job_log[:args]) %></code></td>
    </tr>
    <tr>
      <th>Uniqueness Id</th>
      <td><code><%= @uniqueness_id %></code></td>
    </tr>
    <tr>
      <th>Job Id</th>
      <td><code><%= @job_id %></code></td>
    </tr>
  </table>
</div>

<div class="row header">
  <div class="col-xs-12">
    <h3>Progresses</h3>
  </div>
</div>

<div class="table_container">
  <table class="table table-hover table-bordered table-striped table-white">
      <th>Stage</th>
      <th>When</th>
      <th>Mode</th>
      <th colspan="2">Expires</th>
      <th>Debug</th>
    </thead>
    <tbody>
      <% @job_log[:logs].each do |log| %>
        <tr>
          <td class="<%= progress_label(log[:progress_stage])%>" rowspan="<%= log[:reason].empty? ? '' : 2 %>"><%= log[:progress_stage] %></td>
          <td><%= (relative_time(log[:timestamp]) rescue 'err') %></td>
          <td><%= log[:mode] %></td>
          <td><%= log[:expiration] %></td>
          <td>
            <% if log[:expires] > Time.at(0).utc %>
              <%= (relative_time(log[:expires]) rescue 'err') %>
            <% else %>
              N/A
            <% end %>
          </td>
          <td><code><%= log[:debug] %></code></td>
        </tr>
        <% unless log[:reason].empty? %>
          <tr><td class="<%= progress_label(log[:progress])%>" colspan="6"><%= log[:reason] %></td></tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
<div style="margin-top:-10px;margin-bottom:15px;"><small><strong>Time Zone:</strong> <%= ActiveJob::Unique::Stats.timezone %></small></div>
